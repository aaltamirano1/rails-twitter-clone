<h1 style="margin: 30px 0">Welcome @<%= current_user.username %></h1>
<h3>Here is what your friends are talking about..</h3>

<table class="table">
  <tbody>
		<% @following_tweets.each do |tweet| %>
      <tr>
        <td width="40px" style="padding-right: 0"><%= image_tag tweet.user.avatar.url, class:'thumb' %></td>
        <td>
          <div>
          <p style="margin-bottom: 0"><strong><%= link_to "@"+tweet.user.username, 
       show_user_path(id: tweet.user.id) %></strong></p>
          <%= link_to tweet.message, tweet_path(id: tweet.id), style: 'color: black; text-decoration: none' %>
          <p style="color: slategrey"><sub><%= tweet.created_at.strftime('%b %e, %Y at %l:%M %p') %></sub></p>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
