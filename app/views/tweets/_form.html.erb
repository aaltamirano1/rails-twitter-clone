      <ul>
      <% tweet.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.text_area :message, id: :tweet_message, class: "form-control", rows: 3, style: 'width: 700px'  %>
